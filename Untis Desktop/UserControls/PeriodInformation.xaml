<UserControl x:Class="UntisDesktop.UserControls.PeriodInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}" Name="Control">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Text" Text="{Binding InformationString, Mode=OneTime}" Background="{Binding TargetColor, Converter={StaticResource DrawingBrushConverter}, Mode=OneTime}" FontSize="10.5" TextWrapping="WrapWithOverflow"
               Height="auto" Width="auto" Grid.RowSpan="2"/>
        
        <!-- Cancellation line -->
        <Line X1="0" X2="{Binding ElementName=Control, Path=ActualWidth, Mode=OneWay}" Y1="0" Y2="0" Stroke="Black" StrokeThickness="1.75"
              Visibility="{Binding IsCancelled, Converter={StaticResource BoolVisibilityConverter}, Mode=OneTime}" Grid.Row="1"/>
    </Grid>
</UserControl>
