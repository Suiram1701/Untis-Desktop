<UserControl x:Class="UntisDesktop.UserControls.AttachmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">
    <Border Name="Border" CornerRadius="10" VerticalAlignment="Center" Margin="2,0" Padding="5,1" Style="{StaticResource DeleteBtnBorder}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding FileName}" FontSize="16" VerticalAlignment="Center"/>
            <Button Click="Delete_Click" Visibility="{Binding ElementName=Border, Path=IsMouseOver, Converter={StaticResource BoolVisibilityConverter}, Mode=OneWay}"
                    VerticalAlignment="Center" Margin="3,0,0,0" Template="{StaticResource DeleteBtn}"/>
        </StackPanel>
    </Border>
</UserControl>
