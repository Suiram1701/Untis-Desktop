<Application x:Class="UntisDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converter="clr-namespace:UntisDesktop.Converter">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <Converter:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
            <Converter:ColorToBrushConverter x:Key="DrawingBrushConverter"/>
            <Converter:MathConverter x:Key="MathConverter"/>

            <!-- Other styles and templates -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Buttons.xaml"/>
                <ResourceDictionary Source="/Resources/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Templates/SchoolDataTemplate.xaml"/>
                <ResourceDictionary Source="/resources/Templates/NewsMessageDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
