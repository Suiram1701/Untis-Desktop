<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HeaderLessTabControl" TargetType="{x:Type TabControl}">
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="TagTemplate" TargetType="{x:Type Label}">
        <Border CornerRadius="10" Background="{DynamicResource PressedDarkBtnColor}" Margin="0,0,5,0" Padding="10,5">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <Style x:Key="DeleteBtnBorder" TargetType="{x:Type Border}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource HoverDarkBtnColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>