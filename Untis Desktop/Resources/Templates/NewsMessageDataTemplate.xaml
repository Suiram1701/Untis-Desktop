<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Models="clr-namespace:WebUntisAPI.Client.Models;assembly=WebUntisAPI.Client">
    <DataTemplate x:Key="NewsMessageDataTemplate" DataType="{x:Type Models:NewsMessage}">
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="15">
            <Grid Name="Grid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Subject, Mode=OneWay}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Grid.Row="0" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Text}" FontSize="14" TextWrapping="Wrap" Grid.Row="1" HorizontalAlignment="Center" />
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>